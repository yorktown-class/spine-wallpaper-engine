{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@public/*": ["public/*"]
    },
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es6",
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}